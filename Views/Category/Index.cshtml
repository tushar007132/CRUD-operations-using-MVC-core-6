@model IEnumerable<Category>

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>
    
<table class="table table-bordered table-striped mt-5" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th> 
            <th>Display Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.DisplayOrder
                </td>
                <td width="20%">
                    @obj.CreatedDateTime
                </td>
                <td width="20%">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2">
                        <i class="bi bi-pencil-square"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>